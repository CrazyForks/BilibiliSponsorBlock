{
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "endOfLine": "auto",
    "quoteProps": "preserve",
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "useTabs": true
            }
        },
        {
            "files": "*.html",
            "options": {
                "tabWidth": 2,
                "useTabs": true
            }
        }
    ]
}